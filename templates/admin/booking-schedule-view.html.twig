                            </td>
                            <td>{{strikeStart|raw}}{{waitingListItem.nopassengers}}{{strikeEnd|raw}}</td>
                            <td>{{strikeStart|raw}}{{waitingListItem.notes}}{{strikeEnd|raw}}</td>
                            <td>
                                {% if(waitingListItem.deleted is null) %}
                                    <div class="btn-group pull-right hidden-print">
                                        <a href="{#{ path('waiting_list_delete', {'id':waitingListItem.id}) }#}" class="btn btn-default btn-xs"><span class="glyphicon glyphicon-minus-sign"></span></a>
                                    </div>
                                {% else %}
                                    &nbsp;
                                {% endif %}
                            </td>
                        </tr>
                    {% endfor %}

                    {% else %}
                        <div class="panel-body">NONE</div>
                    {% endif %}

                    </tbody>
                </table>
            </div>
        </div>


