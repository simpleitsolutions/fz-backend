                            <td>{{bookingrequest.nopassengers}}</td>
                            <td class="hidden-xs hidden-sm hidden-md hidden-lg">{{bookingrequest.comments}}</td>
                            <td class="visible-xs visible-sm">{{bookingrequest.flightdate is empty ? "" : bookingrequest.flightdate|date("d M")}}</td>
                            <td class="hidden-xs hidden-sm">{{bookingrequest.flightdate is empty ? "" : bookingrequest.flightdate|date("d-m-Y")}}</td>
                            <td class="visible-xs visible-sm">{{bookingrequest.arrivaldate is empty ? "" : bookingrequest.arrivaldate|date("d M")}}</td>
                            <td class="hidden-xs hidden-sm">{{bookingrequest.arrivaldate is empty ? "" : bookingrequest.arrivaldate|date("d-m-Y")}}</td>
                            <td class="visible-xs visible-sm">{{bookingrequest.departuredate is empty ? "" : bookingrequest.departuredate|date("d M")}}</td>
                            <td class="hidden-xs hidden-sm">{{bookingrequest.departuredate is empty ? "" : bookingrequest.departuredate|date("d-m-Y")}}</td>
